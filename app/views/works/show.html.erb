<br/><p id="notice"><%= notice %></p>

<h1>Action "<%= @work.title %>"</h1>

<hr/>
<%= link_to 'Voir toutes les actions', works_path %>
<hr/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description de l'action</th>
      <th>Description de l'impact</th>
      <th>Nécessité d'une maison ?</th>
      <th>Coût [CHF]</th>
      <th>Temps</th>
      <th>Difficulté</th>
      <th>Thème</th>
      <th>Type d'action</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @work.title %></td>
      <td><%= @work.description %></td>
      <td><%= @work.impact %></td>
      <td>
        <% if @work.house == true %>
          Oui
        <% else %>
          Non
        <% end %>
      </td>
      <td><%= @work.cost %></td>
      <td><%= @work.time %></td>
      <td><%= @work.difficulty %></td>
      <td>
        <% topics = Topic.all %>
        <% topics.each do |topic| %>
          <% if topic.id == @work.topic.id %>
            <%= topic.title %>
          <% end %>
        <% end %>
      </td>
      <td>
        <% categories = Category.all %>
        <% categories.each do |category| %>
          <% if category.id == @work.category.id %>
            <%= category.title %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to 'Editer', edit_work_path(@work) %></td>
    </tr>
</table>
