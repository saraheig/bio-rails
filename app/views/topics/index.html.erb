<br/><p id="notice"><%= notice %></p>

<h1>Table des thèmes</h1>

<hr/>
<%= link_to 'Ajouter un nouveau thème', new_topic_path %>
<hr/>

<%= form_tag(topics_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], size: '30' %>
  <%= submit_tag 'Rechercher', name: nil %>
<% end %><br/>
<%= link_to 'Annuler la recherche', topics_path %><br/><br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.description %></td>
        <td>
          <%= link_to 'Editer', edit_topic_path(topic) %>
          <%= link_to 'Supprimer', topic, method: :delete, data: { confirm: 'Etes-vous sûr ? Attention : La suppression de ce thème suprimera toutes les actions associées.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
