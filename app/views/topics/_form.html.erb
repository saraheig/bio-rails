<%= form_with(model: topic, local: true) do |form| %>
  <% type = request.path_info.split("/")[3] %>
  <% if type == 'edit' %>
    <%-# This is an existing topic. -%>
    <h2>Thème "<%= topic.title %>"</h2>
  <% end %>
  <% if topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic.errors.count, "erreur identifiée", "erreurs identifiées") %> :</h2>

      <ul>
      <% topic.errors.messages.values.each do |message| %>
        <li><%= message[0] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <hr/><h3>Information sur le thème</h3><br/>

  <div class="field">
    Titre : <br/>
    <%= form.text_field :title, id: :topic_title, size: '43.5' %>
  </div>

  <div class="field">
    Description : <br/>
    <%= form.text_area :description, id: :topic_description, size: '40x5' %>
  </div>

  <div class="actions">
    <%= form.submit 'Enregistrer' %>
  </div>
<% end %>
