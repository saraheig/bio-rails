<br/><p id="notice"><%= notice %></p>

<h1>Table des types d'action</h1>

<hr/>
<%= link_to 'Ajouter un nouveau type d\'action', new_category_path %>
<hr/>

<%= form_tag(categories_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], size: '30' %>
  <%= submit_tag 'Rechercher', name: nil %>
<% end %><br/>
<%= link_to 'Annuler la recherche', categories_path %><br/><br/>

<table class="table table-striped table-bordered table-hover" style="max-width: 50%">
  <thead>
    <tr>
      <th>Titre</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td>
          <%= link_to 'Editer', edit_category_path(category) %><br/>
          <%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Etes-vous sûr ? Attention : La suppression de ce type d\'action suprimera toutes les actions associées.' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
